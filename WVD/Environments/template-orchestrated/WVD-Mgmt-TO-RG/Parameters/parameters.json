{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    // 'Start on connect' role definition
    "soCRoleDefParameters": {
      "value": {
        "enabled": true,
        "moduleName": "RoleDefinitions",
        "moduleVersion": "1.0.0",
        "roleName": "ReadAndStartVMs",
        "actions": [
          "Microsoft.Compute/virtualMachines/start/action",
          "Microsoft.Compute/virtualMachines/read"
        ]
      }
    },
    // 'Start on connect' role assignment
    // Parameter 'RoleAssignments' is constructed during deployment
    "soCRoleAssignParameters": {
      "value": {
        "enabled": false,
        "moduleName": "RoleAssignments",
        "moduleVersion": "1.0.0"
      }
    },
    // Resource Group
    "rgParameters": {
      "value": {
        "enabled": true,
        "moduleName": "ResourceGroup",
        "moduleVersion": "1.0.0"
        // "resourceGroupName": "myavd"
      }
    },
    // Key Vault
    "kvParameters": {
      "value": {
        "enabled": true,
        "moduleName": "KeyVault",
        "moduleVersion": "1.0.0",
        "keyVaultName": "WVD-Mgmt-TO-RG-kv-001",
        // "accessPolicies": [
        //   {
        //     "tenantId": "98f3e5a8-1add-4955-a7ed-16b948862dbb",
        //     "objectId": "<ReplaceWith-ServiceConnectionServicePrincipalObjectId>",
        //     "permissions": {
        //       "keys": [
        //         "All"
        //       ],
        //       "secrets": [
        //         "All"
        //       ],
        //       "certificates": [
        //         "All"
        //       ]
        //     }
        //   }
        // ],
        "vaultSku": "Standard"
      }
    },
    // Storage Account
    "storAccountParameters": {
      "value": {
        "enabled": true,
        "moduleName": "StorageAccounts",
        "moduleVersion": "1.0.0",
        "storageAccountName": "wvdmgmt",
        "storageAccountKind": "StorageV2",
        "storageAccountSku": "Standard_LRS",
        "blobContainers": [
          {
            "name": "imagescripts",
            "publicAccess": "None",
            "roleAssignments": []
          },
          {
            "name": "storagejoin",
            "publicAccess": "None",
            "roleAssignments": []
          },
          {
            "name": "hostpool1",
            "publicAccess": "None",
            "roleAssignments": []
          }
        ],
        "tables": [
          "mgmthostpool"
        ]
      }
    },
    // Automation Account
    "automAccountParameters": {
      "value": {
        "enabled": true,
        "moduleName": "AutomationAccounts",
          "moduleVersion": "1.0.0",
        "automationAccountName": "mgmtautoacc"
      }
    },
    // Recovery Services Vault
    "rsvParameters": {
      "value": {
        "enabled": true,
        "moduleName": "RecoveryServicesVaults",
        "moduleVersion": "1.0.0",
        "recoveryVaultName": "mgmtrecservault",
        "backupPolicies": [
          {
            "name": "mgmtrecservicepolicy",
            "type": "Microsoft.RecoveryServices/vaults/backupPolicies",
            "properties": {
              "backupManagementType": "AzureStorage",
              "workloadType": "AzureFileShare",
              "schedulePolicy": {
                "schedulePolicyType": "SimpleSchedulePolicy",
                "scheduleRunFrequency": "Daily",
                "scheduleRunTimes": [
                  "2019-11-07T04:30:00Z"
                ],
                "scheduleWeeklyFrequency": 0
              },
              "retentionPolicy": {
                "retentionPolicyType": "LongTermRetentionPolicy",
                "dailySchedule": {
                  "retentionTimes": [
                    "2019-11-07T04:30:00Z"
                  ],
                  "retentionDuration": {
                    "count": 30,
                    "durationType": "Days"
                  }
                }
              },
              "timeZone": "India Standard Time",
              "protectedItemsCount": 0
            }
          }
        ]
      }
    },
    // Shared
    "tags": {
      "value": {
        "Environment": "<ReplaceWith-Environment>",
        "Contact": "<ReplaceWith-Contact>",
        "PurchaseOrder": "<ReplaceWith-PurchaseOrder>",
        "CostCenter": "<ReplaceWith-CostCenter>",
        "ServiceName": "<ReplaceWith-ServiceName>",
        "Role": "<ReplaceWith-Role>"
      }
    }
  }
}
